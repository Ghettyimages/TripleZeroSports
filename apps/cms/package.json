{
  "name": "cms",
  "version": "1.0.0",
  "description": "Payload CMS for TripleZeroSports",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "pnpm build:payload && pnpm build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "seed": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts node --loader ts-node/esm src/seed.ts",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "lint": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist .next"
  },
  "dependencies": {
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-postgres": "^0.8.10",
    "@payloadcms/plugin-cloud-storage": "^1.1.3",
    "@payloadcms/richtext-slate": "^1.5.2",
    "@triplezerosports/types": "workspace:*",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "payload": "^2.28.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@triplezerosports/config": "workspace:*",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.3",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}

