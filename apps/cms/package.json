{
  "name": "cms",
  "version": "1.0.0",
  "description": "Payload CMS for TripleZeroSports",
  "main": "dist/server.js",
  "engines": { "node": ">=20.0.0 <21" },
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run build:payload && npm run build:server",
    "migrate": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js payload migrate",
    "migrate:custom": "node dist/migrate.js",
    "start": "npm run migrate:custom && node dist/server.js",
    "seed": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts node --loader ts-node/esm src/seed.ts"
  },
  "dependencies": {
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-postgres": "^0.8.10",
    "@payloadcms/richtext-slate": "^1.5.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "payload": "^2.32.3",
    "pg": "^8.11.3",
    "slugify": "^1.6.6",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}